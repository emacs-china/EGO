{{#show-meta}}
    <div class="post-meta">
        <span title="post date" class="post-info">{{{date}}}</span>
        <span title="last modification date" class="post-info">{{mod-date}}</span>
        <span title="tags" class="post-info">{{{tag-links}}}</span>
        <span title="author" class="post-info">{{author}}</span>
    </div>
{{/show-meta}}
<footer class="footer">
    <p>Generated by {{{creator-info}}}</p>
    <p>
        Copyright &copy; 2012 - <span id="footerYear"></span> <a href="mailto:{{email}}">{{author}}</a>
        &nbsp;&nbsp;-&nbsp;&nbsp;
        Powered by <a href="https://github.com/emacs-china/EGO" target="_blank">EGO</a>
        <script type="text/javascript">document.getElementById("footerYear").innerHTML = (new Date()).getFullYear();</script>
    </p>
</footer>
